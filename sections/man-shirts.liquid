{% render 'menu-product' %}

<script src="{{ 'pagination.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Man Shirts",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Latest Products"
    },
    {
      "type": "range",
      "id": "per_page_mobile",
      "label": "Products per Page (Mobile)",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 12
    },
    {
      "type": "range",
      "id": "per_page_tablet",
      "label": "Products per Page (Tablet)",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 12
    },
    {
      "type": "range",
      "id": "per_page_desktop",
      "label": "Products per Page (Desktop)",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 12
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection (optional)"
    },
    {
      "type": "product_list",
      "id": "product_list",
      "label": "Manual Products (optional)",
      "limit": 50
    }
  ],

  "presets": [
    {
      "name": "Man Shirts",
      "category": "Products"
    }
  ]
}

{% endschema %}
