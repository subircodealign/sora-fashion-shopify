{% render 'menu-product' %}

<script src="{{ 'pagination.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Season Accessories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Latest Products"
    },
    {
      "type": "range",
      "id": "per_page",
      "label": "Products per Page",
      "min": 3,
      "max": 50,
      "step": 1,
      "default": 12
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection (optional)"
    },
    {
      "type": "product_list",
      "id": "product_list",
      "label": "Manual Products (optional)",
      "limit": 50
    }
  ],
    
  "presets": [
    {
      "name": "Season Accessories Section",
      "category": "Products"
    }
  ]
}
{% endschema %}
