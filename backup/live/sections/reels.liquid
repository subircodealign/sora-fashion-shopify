
<div class="w-full flex flex-col justify-start items-center gap-12 overflow-hidden mx-auto py-12 md:py-16 lg:py-24">
  
  <!-- Heading Section -->
  <div class="flex flex-col justify-start items-center gap-2 px-4 md:px-[4.31rem] lg:px-[8.75rem] xl:px-[13.38rem]">
    <h2 class="w-full text-center text-primary text-2xl md:text-[2rem] lg:text-5xl font-normal md:leading-[3rem] lg:leading-[4rem] font-catalina">
      {{ section.settings.heading }}
    </h2>
    <p class="text-center text-primary text-[1rem] md:text-[1.125rem] lg:text-2xl font-medium leading-9 font-[Figtree]">
      {{ section.settings.subheading }}
    </p>
  </div>

  <!-- Image Grid -->
  <div class="reels-slider flex justify-center items-center gap-6">

    {% if section.settings.image_1 != blank %}
      <img class="w-[9.9375rem] h-[13.6875rem] md:w-[9.5625rem] md:h-[13.1875rem] lg:w-64 lg:h-96 object-cover" 
           src="{{ section.settings.image_1 | image_url: width: 255, height: 353 }}" 
           alt="Image 1" 
           width="255" 
           height="353">
    {% endif %}

    {% if section.settings.image_2 != blank %}
      <img class="w-[9.9375rem] h-[9.9375rem] md:w-[9.9375rem] md:h-[9.9375rem] lg:w-64 lg:h-64 object-cover" 
           src="{{ section.settings.image_2 | image_url: width: 255, height: 255 }}" 
           alt="Image 2" 
           width="255" 
           height="255">
    {% endif %}

    {% if section.settings.image_3 != blank %}
      <img class="w-[9.9375rem] h-[13.6875rem] md:w-[9.5625rem] md:h-[13.1875rem] lg:w-64 lg:h-96 object-cover" 
           src="{{ section.settings.image_3 | image_url: width: 255, height: 353 }}" 
           alt="Image 3" 
           width="255" 
           height="353">
    {% endif %}

    {% if section.settings.image_4 != blank %}
      <img class="w-[9.9375rem] h-[9.9375rem] md:w-[9.9375rem] md:h-[9.9375rem] lg:w-64 lg:h-64  object-cover" 
           src="{{ section.settings.image_4 | image_url: width: 255, height: 255 }}" 
           alt="Image 4" 
           width="255" 
           height="255">
    {% endif %}

    {% if section.settings.image_5 != blank %}
      <img class="w-[9.9375rem] h-[13.6875rem] md:w-[9.5625rem] md:h-[13.1875rem] lg:w-64 lg:h-96object-cover" 
           src="{{ section.settings.image_5 | image_url: width: 255, height: 353 }}" 
           alt="Image 5" 
           width="255" 
           height="353">
    {% endif %}

    {% if section.settings.image_6 != blank %}
      <img class="w-[9.9375rem] h-[9.9375rem] md:w-[9.9375rem] md:h-[9.9375rem] lg:w-64 lg:h-64 object-cover" 
           src="{{ section.settings.image_6 | image_url: width: 255, height: 255 }}" 
           alt="Image 6" 
           width="255" 
           height="255">
    {% endif %}

  </div>
</div>

<script src="{{ 'slider.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Home Reels Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "We bring freedom to your every day movements"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading Text",
      "default": "@sora_fashion"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second Image"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Third Image"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Fourth Image"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Fifth Image"
    },
    {
      "type": "image_picker",
      "id": "image_6",
      "label": "Sixth Image"
    }
  ],
  "presets": [
    {
      "name": "Home Reels Section"
    }
  ]
}
{% endschema %}
