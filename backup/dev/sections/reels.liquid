
<div class="w-full flex flex-col justify-start items-center gap-12 overflow-hidden mx-auto py-24">
  
  <!-- Heading Section -->
  <div class="flex flex-col justify-start items-center gap-2">
    <h2 class="w-full max-w-[1012px] text-center text-primary text-5xl font-normal leading-[64px] font-catalina">
      {{ section.settings.heading }}
    </h2>
    <p class="text-center text-primary text-2xl font-medium leading-9 font-[Figtree]">
      {{ section.settings.subheading }}
    </p>
  </div>

  <!-- Image Grid -->
  <div class="reels-slider flex justify-center items-center gap-6">

    {% if section.settings.image_1 != blank %}
      <img class="w-64 h-96 object-cover" 
           src="{{ section.settings.image_1 | image_url: width: 255, height: 353 }}" 
           alt="Image 1" 
           width="255" 
           height="353">
    {% endif %}

    {% if section.settings.image_2 != blank %}
      <img class="w-64 h-64 object-cover" 
           src="{{ section.settings.image_2 | image_url: width: 255, height: 255 }}" 
           alt="Image 2" 
           width="255" 
           height="255">
    {% endif %}

    {% if section.settings.image_3 != blank %}
      <img class="w-64 h-96 object-cover" 
           src="{{ section.settings.image_3 | image_url: width: 255, height: 353 }}" 
           alt="Image 3" 
           width="255" 
           height="353">
    {% endif %}

    {% if section.settings.image_4 != blank %}
      <img class="w-64 h-64 object-cover" 
           src="{{ section.settings.image_4 | image_url: width: 255, height: 255 }}" 
           alt="Image 4" 
           width="255" 
           height="255">
    {% endif %}

    {% if section.settings.image_5 != blank %}
      <img class="w-64 h-96 object-cover" 
           src="{{ section.settings.image_5 | image_url: width: 255, height: 353 }}" 
           alt="Image 5" 
           width="255" 
           height="353">
    {% endif %}

    {% if section.settings.image_6 != blank %}
      <img class="w-64 h-64 object-cover" 
           src="{{ section.settings.image_6 | image_url: width: 255, height: 255 }}" 
           alt="Image 6" 
           width="255" 
           height="255">
    {% endif %}

  </div>
</div>

<script src="{{ 'slider.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Home Reels Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "We bring freedom to your every day movements"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading Text",
      "default": "@sora_fashion"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second Image"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Third Image"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Fourth Image"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Fifth Image"
    },
    {
      "type": "image_picker",
      "id": "image_6",
      "label": "Sixth Image"
    }
  ],
  "presets": [
    {
      "name": "Home Reels Section"
    }
  ]
}
{% endschema %}
