{% render 'brands', heading: section.settings.heading, blocks: section.blocks %}

<script src="{{ 'slider.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Home Featured Brands",
  "max_blocks": 20,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Brand that we featured"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_image",
          "label": "Brand Logo"
        },
        {
          "type": "text",
          "id": "brand_alt",
          "label": "Alt Text"
        },
        {
          "type": "range",
          "id": "logo_width",
          "min": 100,
          "max": 300,
          "step": 10,
          "unit": "px",
          "label": "Logo Width",
          "default": 200
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Featured Brands",
      "category": "Image",
      "blocks": [
        { "type": "brand" },
        { "type": "brand" },
        { "type": "brand" },
        { "type": "brand" },
        { "type": "brand" }
      ]
    }
  ]
}
{% endschema %}
