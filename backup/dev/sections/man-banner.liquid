{% render 'banner',
  background_image: section.settings.background_image,
  badge_text: section.settings.badge_text,
  heading: section.settings.heading,
  subheading: section.settings.subheading,
  primary_button_text: section.settings.primary_button_text,
  primary_button_link: section.settings.primary_button_link,
  secondary_button_text: section.settings.secondary_button_text,
  secondary_button_link: section.settings.secondary_button_link,


  badge_text_color: section.settings.badge_text_color,
  badge_border_color: section.settings.badge_border_color,
  heading_color: section.settings.heading_color,
  subheading_color: section.settings.subheading_color,
  primary_button_bg_color: section.settings.primary_button_bg_color,
  primary_button_text_color: section.settings.primary_button_text_color,
  secondary_button_border_color: section.settings.secondary_button_border_color,
  secondary_button_text_color: section.settings.secondary_button_text_color
%}

{% schema %}
{
  "name": "Man Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },

    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Just Arrived"
    },
    {
      "type": "color",
      "id": "badge_text_color",
      "label": "Badge Text Color",
      "default": "#2F2F2F"
    },
    {
      "type": "color",
      "id": "badge_border_color",
      "label": "Badge Border Color",
      "default": "#2F2F2F"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Elevate Your Wardrobe With Our New Arrivals"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#2F2F2F"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#8B8B8B"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "color",
      "id": "primary_button_bg_color",
      "label": "Primary Button Background Color",
      "default": "#6B749E"
    },
    {
      "type": "color",
      "id": "primary_button_text_color",
      "label": "Primary Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "color",
      "id": "secondary_button_border_color",
      "label": "Secondary Button Border Color",
      "default": "#6B749E"
    },
    {
      "type": "color",
      "id": "secondary_button_text_color",
      "label": "Secondary Button Text Color",
      "default": "#6B749E"
    }
  ],
  "presets": [
    {
      "name": "Man Hero Banner"
    }
  ]
}
{% endschema %}
