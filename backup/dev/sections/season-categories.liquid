  "name": "Season Categories Section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Spring styles to wear together or apart, whatever the weather."
    },
    {
      "type": "image_picker",
      "id": "img1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "title1",
      "label": "Image 1 Title"
    },
    {
      "type": "textarea",
      "id": "desc1",
      "label": "Image 1 Description"
    },
    {
      "type": "url",
      "id": "link1",
      "label": "Image 1 Link"
    },
    {
      "type": "text",
      "id": "btn1",
      "label": "Image 1 Button Text"
    },
    {
      "type": "image_picker",
      "id": "img2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "title2",
      "label": "Image 2 Title"
    },
    {
      "type": "textarea",
      "id": "desc2",
      "label": "Image 2 Description"
    },
    {
      "type": "url",
      "id": "link2",
      "label": "Image 2 Link"
    },
    {
      "type": "text",
      "id": "btn2",
      "label": "Image 2 Button Text"
    },
    
  ],
  "presets": [
    {
      "name": "Season Categories Section"
    }
  ]
}
{% endschema %}
